= render 'shared/page_title', title: "Recipes for : " + @ingredient.name
%ul.nav.nav-tabs
  %li.active
    = link_to "Recipes", recipes_path
  %li
    = link_to "Chefs", chefs_path
= will_paginate @recipes
- @ingredient.recipes.each do |recipe|
  .row
    .col-md-2
      %section.chef_info.center
        = link_to gravatar_for(recipe.chef, size: 100), chef_path(recipe.chef)
        %h5
          Chef name: #{recipe.chef.chefname}
    .col-lg-6.well
      %h4= link_to recipe.name, recipe_path(recipe)
      %p= recipe.summary
      %p
        Styles: #{render recipe.styles}
      %p
        Ingredients: #{render recipe.ingredients}
      %p
        %span.quiet
          %small
            %b created:
            = time_ago_in_words(recipe.created_at)
            ago,
        %span.quiet
          %small
            %b updated:
            = time_ago_in_words(recipe.updated_at)
            ago
      .pull-right
        = link_to like_recipe_path(recipe, like: true), method: :post do
          %i.glyphicon.glyphicon-thumbs-up
          \&nbsp #{recipe.thumbs_up_total}
          \&nbsp&nbsp&nbsp&nbsp
        = link_to like_recipe_path(recipe, like: false), method: :post do
          %i.glyphicon.glyphicon-thumbs-down
          \&nbsp #{recipe.thumbs_down_total}
    .col-md-4
      = image_tag(recipe.picture.url, size: "250x150", class: "gravatar") if recipe.picture?
  %hr/
= will_paginate @recipes