%header.navbar.navbar-fixed-top.navbar-default
  .container
    = link_to "myRecipes", root_path, class: "btn btn-lg btn-info", id: "logo"
    %ul.nav_ul_item
      %li.dropdown{:style => "list-style:none"}
        = link_to '#', class: "btn btn-default btn-info dropdown-toggle", "data-toggle" => "dropdown" do
          Styles
          %b.caret
        %ul.dropdown-menu
          - Style.all.each do |style|
            %li= link_to style.name, style_path(style)
          - if logged_in?
            %li.divider
            %li
              = link_to(new_style_path) do
                New Style
    %ul.nav_ul_item
      %li.dropdown{:style => "list-style:none"}
        = link_to '#', class: "btn btn-default btn-info dropdown-toggle", "data-toggle" => "dropdown" do
          Ingredients
          %b.caret
        %ul.dropdown-menu
          - Ingredient.all.each do |ingredient|
            %li= link_to ingredient.name, ingredient_path(ingredient)
          - if logged_in?
            %li.divider
            %li
              = link_to(new_ingredient_path) do
                New Ingredient
    - if logged_in?
      .nav_item
        = link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning"
      %ul.nav_item
        %li.dropdown{:style => "list-style:none"}
          = link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do
            = current_user.chefname
            %b.caret
          %ul.dropdown-menu
            %li= link_to "View Profile", chef_path(current_user)
            %li= link_to "Edit Profile", edit_chef_path(current_user)
            %li.divider
            %li= link_to "Logout", logout_path
    - else
      .nav_item
        = link_to "Log in", login_path, class: "btn btn-default btn-danger"